<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="multi_writeoff_form_view" model="ir.ui.view">
            <field name="name">MultiWriteOff Form</field>
            <field name="model">write.off</field>
            <field name="arch" type="xml">
                <form string="WriteOff">
                    <sheet string="Multiple-Writeoff">
                        <group>
                            <group>
                                <field name="invoice_balance" readonly="1"/>
                                <field name="receive_amount" readonly="1" invisible="1"/>
                                <field name="diff_amount" readonly="1"/>
                                <field name="cheque_amount" readonly="1" invisible="1"/>
                            </group>
                            <group>
                                <field name="invoice_id" readonly="1"/>
                                <field name="handling" readonly="1"/>
                                <field name="actual_receive_amount" readonly="1" invisible="1"/>

                            </group>
                        </group>
                        <group>
                            <field name="writeoff_line" nolabel="1">
                                <tree editable="bottom">
                                    <field name="type"/>
                                    <field name="taxes" domain="[('sales_income_wht','=',type)]"/>
                                    <field name="account_id"/>
                                    <field name="description"/>
                                    <field name="taxable_income"/>
                                    <field name="amount_in_percent"/>
                                    <field name="amount_payment"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="total_writeoff_amount" readonly="1"/>
                            <field name="total_sales_wht_amount" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>