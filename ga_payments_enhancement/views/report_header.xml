<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="subtemplate_layout_header">
            <t t-call="ga_payments_enhancement.custom_header_deduction_layout"/>
            <t t-raw="0"/>
        </template>
        <template id="custom_header_deduction_layout">
            <div class="header">
                <div class="row">
                    <div class="col-xs-12 text-center">
                        <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' %res_company.logo"
                             style="height:80px;"/>
                    </div>
                    <div class="col-xs-12 text-center"
                         name="company_address">
                        <span t-field="res_company.street"/>
                        &#160;
                        <span t-field="res_company.street2"/>
                        &#160;
                        <span t-field="res_company.city"/>
                        &#160;
                        <span t-field="res_company.country_id.name"/>
                        <br/>
                        PHONE NUMBER
                        <span t-field="res_company.phone"/>
                        <br/>
                        EMAIL ID.
                        <span t-field="res_company.email"/>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>