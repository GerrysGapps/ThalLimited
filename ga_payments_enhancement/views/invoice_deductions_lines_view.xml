<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="invoice_deductions_view" model="ir.actions.act_window">
            <field name="name">Deductions</field>
            <field name="res_model">deduction.payment.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">click create to add a new record</p>
            </field>
        </record>
        <record id="invoice_deductions_tree_view" model="ir.ui.view">
            <field name="name">Invoice Deductions</field>
            <field name="model">deduction.payment.line</field>
            <field name="arch" type="xml">
                <tree string="Invoice Deductions" editable="top" create="0">
                    <field name="payment_id" readonly="1"/>
                    <field name="invoice_id" string="Vendor Bill/Customer Invoice" readonly="1"/>
                    <field name="balance_amt" readonly="1"/>
                    <field name="receiving_amt" readonly="1" string="Receive/Pay Amount"/>
                    <!--<field name="payment_difference" readonly="1"/>-->
                    <field name="writeoff_account_id_" string="Post Difference In" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="invoice_deductions_duplicate_view" model="ir.actions.act_window">
            <field name="name">SO/PO Deductions</field>
            <field name="res_model">deduction.payment.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">click create to add a new record</p>
            </field>
        </record>

        <record id="invoice_deductions_duplicate_tree_view" model="ir.ui.view">
            <field name="name">Invoice Deductions</field>
            <field name="model">deduction.payment.line</field>
            <field name="arch" type="xml">
                <tree string="Invoice Deductions" editable="top" create="0">
                    <field name="payment_id" readonly="1"/>
                    <field name="description" readonly="1"/>
                    <field name="receiving_amt" readonly="1" string="Difference Amount"/>
                    <field name="amount_in_percent" string="Amount in %" readonly="1"/>
                    <field name="writeoff_account_id" string="Post Difference In" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="action_deductions_new_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="invoice_deductions_duplicate_tree_view"/>
            <field name="act_window_id" ref="invoice_deductions_view"/>
        </record>
    </data>
</openerp>