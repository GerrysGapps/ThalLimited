<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="add_button_po_form" model="ir.ui.view">
        <field name="name">purchase.order.form.add_button</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="button_done" position="after">
                <button name="%(action_purchase_advance_payment_wiz)d" string="Pay Purchase advanced"
                    type="action"  attrs="{'invisible': ['|',('state', 'in', ['done','cancel','draft']),('amount_due','=',0)]}" groups="account.group_account_user" />
            </button>
          <notebook position="inside">
                <page string="Payment Information" groups="account.group_account_invoice">
                   <group string="Payment Reference">
                       <field name="payment_entry_ref" nolabel="1" colspan="4">
                           <tree string="Payments" editable="bottom">
                               <field name="name" readonly="1"/>
                               <field name="create_date" readonly="1"/>
                               <field name="state" readonly="1"/>
                           </tree>
                       </field>
                   </group>
                </page>
            </notebook>
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="amount_due" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
