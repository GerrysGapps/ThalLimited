<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_customer_form_inherit" model="ir.ui.view">
        <field name="name">view.invoice.customer.form.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//button[5]" position="replace">
            </xpath>
            <xpath expr="//button[@name='action_invoice_sent']" position="after">
                <button name="%(action_invoice_invoice_batch_process)d" type="action" string="Register Payment" class="oe_highlight"  attrs="{'invisible':[('state','=','paid')]}"/>
            </xpath>

             <xpath expr="//button[@name='%(account.action_account_invoice_payment)d']" position="attributes">
                 <attribute name="invisible">1</attribute>
             </xpath>
        </field>
    </record>

    <record id="view_invoice_supplier_form_inherit" model="ir.ui.view">
        <field name="name">view.invoice.supplier.form.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//button[2]" position="replace">
            </xpath>
            <xpath expr="//button[@name='action_invoice_draft']" position="after">
                <button name="%(action_invoice_invoice_batch_process)d" type="action" string="Register Payment" class="oe_highlight" attrs="{'invisible':[('state','=','paid')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
