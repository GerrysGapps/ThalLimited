<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="multi_writeoff_form_view_" model="ir.ui.view">
            <field name="name">MultiWriteOff Form</field>
            <field name="model">write.off_</field>
            <field name="arch" type="xml">
                <form string="WriteOff">
                    <sheet string="Multiple-Writeoff">
                        <group>
                            <group>
                                <field name="invoice_balance" readonly="1"/>
                                <field name="receive_amount" readonly="1"/>
                                <field name="diff_amount" readonly="1"/>
                            </group>
                            <group>
                                <field name="invoice_id" readonly="1"/>

                            </group>
                        </group>
                        <group>
                            <field name="writeoff_line" nolabel="1" readonly="1">
                                <tree editable="bottom">
                                    <field name="type" readonly="1"/>
                                    <field name="taxes" domain="[('sales_income_wht','=',type)]"/>
                                    <field name="account_id" readonly="1"/>
                                    <field name="description" readonly="1"/>
                                    <field name="taxable_income" readonly="1"/>
                                    <field name="amount_in_percent" readonly="1"/>
                                    <field name="amount_payment" readonly="1"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <footer>
                                <group>
                                    <field name="total_writeoff_amount" readonly="1"/>
                                </group>
                            </footer>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>