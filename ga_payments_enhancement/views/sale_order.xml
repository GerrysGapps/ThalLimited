<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="add_button_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.add_button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_done" position="after">
                <button name="%(action_advance_payment_wizard)d" string="Pay sale advanced"
                    type="action"  attrs="{'invisible': ['|',('state', 'in', ['done','cancel','draft']),('invoice_status', 'in', ['invoiced'])]}"/>
            </button>
            <notebook position="inside">
                <page string="Payment Information" groups="account.group_account_invoice">
                   <group string="Payment Reference">
                       <field name="payment_entry_ref" nolabel="1" colspan="4">
                           <tree string="Payments" editable="bottom">
                               <field name="name" readonly="1"/>
                               <field name="create_date" readonly="1"/>
                               <field name="state" readonly="1"/>
                           </tree>
                       </field>
                   </group>
                </page>
            </notebook>
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="amount_due" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
